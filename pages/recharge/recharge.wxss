/* pages/recharge/recharge.wxss */
page{
  background-color: #fafafa;
}
.container{
  background-color: #fff;
}
.ye-list{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0% 4%;
  border-bottom: 8rpx solid #fafafa;
  box-sizing: border-box;
}
.ye-list text{
  display: inline-block;
  font-size: 26rpx;
  color: #1a1a1a;
}
.ye-list text.ye-text{
  margin-right:20rpx;
}
.ye-list text.green{
  font-size: 28rpx;
}
.box{
  width: 92%;
  padding: 0% 4%;
  background-color: #fff;
}
.box view{
  color: #333;
  font-size: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.box text{
  width: 23%;
  height: 70rpx;
  line-height: 70rpx;
  display: inline-block;
  color: #333;
  font-size: 36rpx;
  text-align: center;
  border: 1rpx solid #62ab00;
  box-sizing: border-box;
  border-radius: 10rpx;
  margin-right: 2%;
  margin-bottom: 2%;
}
.box text.act{
  background-color: #62ab00;
  color: #fff;
}
.btn{
  width: 100%;
  background-color: #fafafa;
  padding-top: 20%;
}
button{
  width: 85%;
  color: #fff;
  font-size: 34rpx;
  background-color: #62ab00;
  border: none;
}