/* pages/goodsDetails/goodsDetails.wxss */
.container {
  border-top: none;
  overflow-x: hidden;
}
.details-img{
  border-bottom: 1rpx solid #f4f4f4;
}
.details-img,.details-img image{
  width: 100%;
}
.goodsDetails{
  width: 92%;
  margin: 3% 4%;
}
.goodsDetails .title{
  color: #232323;
  font-size: 26rpx;
  line-height: 60rpx;
}
.goodsDetails .price{
  font-size: 32rpx;
}
.parameter{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 10rpx solid #f4f4f4;
  border-bottom: 10rpx solid #f4f4f4;
  box-sizing: border-box;
  padding: 0 4%;
}
.parameter image{
  width: 12rpx;
  height: 25rpx;
}
.parameter text{
  color: #696969;
  font-size: 26rpx;
}
.parameter icon{
  color: #696969;
}
.store{
  width: 92%;
  height: 100rpx;
  padding: 0 4%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f4f4f4;
}
.store .store-name{
  height: 80rpx;
  line-height: 80rpx;
  color: #232323;
  font-size: 26rpx;
  padding-left: 80rpx;
}
.store .store-btn{
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  font-size: 22rpx;
  text-align: center;
  background-color: #62ab00;
  border-radius: 30rpx;
}
.details-con{
  width: 100%;
  padding: 0 4%;
}
.details-con .title{
  height: 60rpx;
  line-height: 60rpx;
  color: #232323;
  font-size: 26rpx;
}
.details-con image{
  width: 100%;
}
.footer-two .left,.footer-two .right{
  width: 50%;
  text-align: center;
  font-size: 30rpx;
  display: inline-block;
}
.footer-two .left{
  color: #62ab00;
}
.footer-two .left image{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 5rpx;
}
.footer-two .right{
  color: #fff;
  background-color: #62ab00;
}
