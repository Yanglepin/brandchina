/* pages/submitOrder/submitOrder.wxss */
page {
  background-color: #f4f4f4;
}
.container {
  background-color: #fff;
}
.m-list{
  border-bottom: 15rpx solid #f4f4f4;
}
.m-list .list text{
  font-size: 26rpx;
  color: #969696;
}
.order-con{
  width: 92%;
}

.footer-two{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.footer-two .left,.footer-two .right{
  text-align: center;
  font-size: 30rpx;
  display: inline-block;
}
.footer-two .left{
  margin-right: 40rpx;
}
.footer-two .right{
  width: 25%;
  background-color: #62ab00;
  color: #fff;
}
.order-con .order-list{
  border-bottom: 1px solid #f4f4f4;
  box-sizing: border-box;
}
.user-address {
  width: 100%;
  padding: 2% 3%;
  background-color: #fff;
  border-bottom: 6px solid #f4f4f4;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-top: 85rpx;
}
.user-address .info {
  flex: 1;
  line-height: 50rpx;
  color: #565656;
  font-size: 26rpx;
  margin-left: 3%;
}
.user-address .info text{
  display: block;
}
.user-address .info text:first-child{
  color: #232323;
  font-size: 30rpx;
}
.user-address .info text.phone{
  display: inline-block;
  margin-left: 5%;
}
.user-address icon.icon-dizhi{
  color: #62ab00;
}
.nav-address{
  position: fixed;
  top: 0%;
  z-index: 1;
  background-color: #fff;
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f4f4f4;
  box-sizing: border-box;
}
.nav-address view{
  width: 50%;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}
.nav-address view.active{
  color: #fff;
  background-color: #62ab00;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.cover_screen{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow-x: hidden;
  z-index: 10;
  color: #fff;
}
.store_box {
  width: 100%;
  height: 70%;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 200;
  background: #fff;
  overflow-y: scroll;
}
.store_box .title{
  position: relative;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
  border-bottom: 1rpx solid #f4f4f4;
  box-sizing: border-box;
}
.store_box .title image{
  position: absolute;
  left: 4%;
  top: 30%;
  width: 40rpx;
  height: 40rpx;
}
.store_box .store-list{
  border-bottom: 1rpx solid #f4f4f4;
  box-sizing: border-box;
  padding: 2% 3%;
}
.store_box .store-list text:first-child{
  font-size: 28rpx;
  color: #333;
}
.store_box .store-list text{
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 40rpx;
}
.hoverBg{
  background-color: #d8e0cd;
}

