/* pages/news/news.wxss */
.swiper-box .news-list{
  width: 94%;
  overflow-x: hidden;
  margin: 3%;
  border-bottom: 1rpx solid #f4f4f4;
}
.swiper-box .news-list .title{
  font-size: 26rpx;
  color: #444444;
  line-height: 45rpx;
}
.swiper-box .news-list .box-img{
  width: 100%;
}
.swiper-box .news-list .box-img image{
  width: 32%;
  height: 150rpx;
  margin: 2% 0%;
}
.swiper-box .news-list .box-img image:nth-child(3n-1){
  margin: 2%;
}
.swiper-tab-list {
  width: 20%;
}
.swiper-box .news-list .video-box,.swiper-box .news-list .video-box video{
  width: 100%;
  height: 360rpx;
}