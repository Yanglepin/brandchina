/**index.wxss**/
.header{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.header .left{
  max-width: 32%;
  color: #252524;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.header .left icon{
  display: inline-block;
  font-size: 32rpx;
}
.header .left icon.point{
  color: #62ab00;
  font-size: 38rpx;
  padding-right: 2%;
}
.header .right{
  min-width: 68%;
  text-align: left;
  position: relative;
}
.header .right icon.iconfont{
  /* width: 30rpx;
  height: 30rpx; */
  position: absolute;
  left: 3%;
  top: -20%;
  font-size: 36rpx;
  color: #9b9b9b;
}
.header .right input{
  width: 80%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #eeeeee;
  border-radius: 30rpx;
  color: #9b9b9b;
  font-size: 24rpx;
  padding-left: 60rpx;
}
.position-img{
  width: 100%;
  height: 200rpx;
}
.position-img image{
  width: 100%;
  height: 100%;
}
.swiper image {
  width: 100%;
  height: auto;
}
.swiper-image {
  height: 100%;
  width: 100%;
}
.slide-image {
  height: 100%;
  width: 100%;
  display: block;
}
.image-group {
  width: auto;
  height: 150rpx;
  display: flex;
  white-space: nowrap;
}
.image-group .sorts-list{
  width: 25%;
  display: inline-block;
  text-align: center;
}
.image-group .sorts-list image{
  width: 100rpx;
  height: 100rpx;
}
.image-group .sorts-list text{
  font-size: 26rpx;
  color: #333333;
  display: block;
  margin-top: 10rpx;
}
.tuijian{
  height: 95rpx;
  width: 100%;
  border-top: 8rpx solid #f4f4f4;
  margin-top: 20rpx;
  box-sizing: border-box;
}
.tuijian image{
  width: 60%;
  height: 50rpx;
  margin: 2% 20%;
}
.tuijian-list{
  padding-bottom: 60rpx;
}
.tuijian-list{
  width: 100%;
  background-color: #f4f4f4;
}
