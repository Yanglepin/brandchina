/* pages/infoUpdate/infoUpdate.wxss */
page{
  background-color: #f4f4f4;
}
.container{
  background-color: #fff;
}
.info-list{
  width: 100%;
  padding: 0% 4%;
  height: 150rpx;
  line-height: 150rpx;
  border-bottom: 1rpx solid #f4f4f4;
  box-sizing: border-box;
}
.info-list:nth-child(2){
  height: 120rpx;
  line-height: 120rpx;
}
.info-list view{
  color: #292929;
  font-size: 28rpx;
}
.info-list .user-box{
  width: 140rpx;
  height: 140rpx;
}
.info-list image.user{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  margin-top: 15%;
}

.info-list icon{
  color: #999;
}
.info-list input{
  color: #999999;
  font-size: 26rpx;
  text-align: right;
  height: 120rpx;
  line-height: 120rpx;
}
.btn{
  width: 100%;
  background-color: #f4f4f4;
  padding-top: 60%;
}
button{
  width: 85%;
  color: #fff;
  font-size: 34rpx;
  background-color: #62ab00;
  border: none;
}
.info-list .user-box icon{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  margin-top: 15%;
  overflow: hidden;
}
