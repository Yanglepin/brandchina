/* pages/integral/integral.wxss */
page{
  background-color: #fafafa;
}
.top{
  width: 100%;
  background-color: #62ab00;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.top .top-list{
  width: 50%;
  padding: 2% 0%;
  margin: 2% 0%;
}
.top .top-list:first-child{
  border-right: 2rpx solid #fff;
  box-sizing: border-box;
}
.top .top-list text{
  display: block;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
}
.top .top-list text:last-child{
  font-size: 26rpx;
}
