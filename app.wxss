/**app.wxss**/
@import "iconfont/iconfont.wxss";
.container {
  height: 100%;
  border-top: 1rpx solid #f4f4f4;
}
.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}

.fl {
  float: left;
}

.fr {
  float: right;
}
.elli{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.elli3 {
    overflow: hidden;
    text-overflow: ellipsis; 
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
.green{
  color: #62ab00 !important;
}
.red{
  color: #ff0000 !important;
}
/* 头部 */
.header {
    width:100%;  
    margin: 0 auto;
    height:90rpx; 
    line-height:90rpx; 
    overflow: hidden; 
    background-color: #fff; 
    color: #252525;
    font-size: 34rpx;
    position: relative;
    border-bottom: 1rpx solid #f4f4f4;
}
.header .icon-left {
  display: block;
  position: absolute;
  top: 30%;
  left: 3%;
  width: 17rpx;
  height: 35rpx;
}
.header .icon-right {
  position: absolute;
  top: 3rpx;
  right: 3%;
}
.header text{
  display: block;
}
.header text.title {
  text-align: center;
  overflow: hidden;
}
.header text.green{
  font-size: 28rpx;
}
/* 标签页 */
.swiper-tab {
  background-color: #fff;
  width: 100%;
  text-align: center;
  line-height: 90rpx;
  white-space: nowrap;
  border-bottom: 1rpx solid #f4f4f4;
  z-index: 1;
  position: fixed;
  top: 0;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 16.66%;
  color: #444444;
}

.on {
  color: #62ab00;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  background-color: #fff;
  margin-top: 90rpx;
}
.swiper-items,.scroll-views{
  height: 100%;
}
.tuijian-list{
  width: 100%;
}
.tuijian-list .box{
  width: 43.5%;
  background-color: #fff;
  padding: 3%;
  margin-top: 1%;
}
.tuijian-list .box:nth-child(2n-1){
  margin-right: 1%;
}
.tuijian-list .box .box-img{
  width: 100%;
  height: 300rpx;
  text-align: center;
}
.tuijian-list .box .box-img image{
  width: 250rpx;
  height: 250rpx;
  vertical-align: middle;
}
.tuijian-list .box .title{
  color: #1c1c1c;
  font-size: 26rpx;
  line-height: 33rpx;
  height: 100rpx;
}
.tuijian-list .box .price{
  color: #ea0a0a;
  font-size: 30rpx;
}

.m-list{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.m-list .list{
  width: 92%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #2a2a2a;
  margin: 0 4%;
  border-bottom: 1rpx solid #f9f9f9;
  box-sizing: border-box;
}
.m-list .list1{
  width: 91%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #2a2a2a;
  margin: 0 4.5%;
  border-bottom: 1rpx solid #f9f9f9;
  box-sizing: border-box;
  padding-left: 6.5%;
}
.m-list .list text{
  height:100rpx;
  line-height:100rpx;
  display: inline-block;
  padding-left: 10%;
}
.m-list .list icon{
  color: #62ab00;
  display: block;
}
.m-list .list icon.fr{
  color: #4a4a4a;
}
.m-list .list image{
  width: 15rpx;
  height: 25rpx;
  display: block;
  margin-top:5%;
}
.m-list .list text.fr{
  display: inline-block;
}

.footer-two{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff; 
  z-index: 1;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid #f4f4f4;
  box-sizing: border-box;
}
.userinfo{
  width: 100%;
}
.user{
  width: 100%;
  padding: 3% 0%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: block;
}
.user icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: block;
  overflow: hidden;
}
.user view{
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  margin-top: 10rpx;
}

.detailed{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #62ab00;
  font-size: 28rpx;
  background-color: #fff;
  padding-left: 3%;
  border-bottom: 1rpx solid #f4f4f4;
  border-top: 1rpx solid #f4f4f4;
  box-sizing: border-box;
}
.detailed-list{
  width: 100%;
  background-color: #fff;
  padding: 1% 3%;
  display: flex;
  flex-direction: row;  
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #fafafa;
  box-sizing: border-box;
}
.detailed-list .left{
  display: flex;
  flex-direction: column;
  color: #3c3c3c;
}
.detailed-list .left text{
  display: block;
  line-height: 40rpx;
  font-size: 26rpx;
}

.detailed-list .left text:first-child{
  font-weight: 500;
}
.detailed-list .left text.date{
  color: #a2a2a2;
  font-size: 22rpx;
}
.detailed-list .green{
  font-size: 26rpx;
}

.order-con{
  width: 100%;
  padding: 0 4%;
}
.order-con .order-list{
  width: 100%;
}
.order-con .order-list .store-name{
  font-size: 28rpx;
  color: #292929;
  height: 100rpx;
  line-height: 100rpx;
}
.order-con .order-list .store-name image{
  height: 55rpx;
  width: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.order-con .order-list  .goods-list {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 15rpx 0;
  border-bottom: 1px solid #f4f4f4;
  box-sizing: border-box;
}
.order-con .order-list .goods-list .order-img {
  width: 25%;
  text-align: center;
}
.order-con .order-list .goods-list .order-img image {
  width:120rpx;
  height: 120rpx;
}
.order-con .order-list .goods-list .goods-title {
  width: 50%;
  font-size: 28rpx;
  color: #232323;
  height: 120rpx;
  line-height: 40rpx;
}
.order-con .order-list .goods-list text{
  display: block;
}
.order-con .order-list .goods-list .price {
    width: 25%;
    text-align: center;
    padding-top: 10rpx;
}
.order-con .order-list .goods-list .price {
    font-size: 30rpx;
}
.order-con .order-list .goods-list .price .num {
    color: #8e8e8e;
    font-size: 24rpx;
}
.total-list{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx; 
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.total-list view{
  font-size: 24rpx;
  color: #626262;
}
.total-list view.total{
  margin-left: 20rpx;
}
.button-hover{
  background-color: #62ab00;
  color: #fff;
}
button::after{
  border: none;
}